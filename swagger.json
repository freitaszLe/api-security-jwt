{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Autenticação",
    "version": "1.0.0",
    "description": "Exemplo simples de autenticação com JWT"
  },
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "usuario": {
                    "type": "string"
                  },
                  "senha": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "usuario": "admin",
                "senha": "123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token JWT gerado",
            "content": {
              "application/json": {
                "example": {
                  "token": "jwt_token_aqui"
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas"
          }
        }
      }
    },
    "/auth/dados": {
      "get": {
        "summary": "Acesso protegido com JWT",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Acesso autorizado",
            "content": {
              "application/json": {
                "example": {
                  "mensagem": "Acesso autorizado!",
                  "usuario": "admin",
                  "dados": [
                    "item1",
                    "item2",
                    "item3"
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Token ausente"
          },
          "403": {
            "description": "Token inválido"
          }
        }
      }
    },
    "/externa/clima/{cidade}": {
      "get": {
        "summary": "Consulta de clima por cidade (protegido)",
        "description": "Retorna dados climáticos atuais da cidade informada usando a WeatherAPI.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "cidade",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Cuiaba"
          }
        ],
        "responses": {
          "200": {
            "description": "Clima retornado com sucesso",
            "content": {
              "application/json": {
                "example": {
                  "cidade": "Cuiabá",
                  "pais": "Brasil",
                  "temperatura_c": 34,
                  "condicao": "Ensolarado",
                  "umidade": 60,
                  "vento_kph": 10
                }
              }
            }
          },
          "401": {
            "description": "Token ausente"
          },
          "403": {
            "description": "Token inválido"
          },
          "500": {
            "description": "Erro ao consultar API externa"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
